@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col-6 text-end ">
            <a asp-controller="Product" asp-action="Create" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>


    @if (Model.Any())
    {
        <table id="tblData" class="table table-bordered table-striped " style="width:100%">
            <thead>
                <tr>
                    <th>ISBN</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>List Price</th>
                    <th>Price</th>
                    <th>Price 50+</th>
                    <th>Price 100+</th>
                    <th>Image</th>
                    <th></th>
                    
                </tr>
            </thead>
           
        </table>
    }
    else
    {
        <div class="bg-warning mt-3">
            <h2>No Products</h2>
        </div>
    }
</div>


@section Scripts{
    <script src="~/js/product.js"></script>
    <script>
        $(document).ready(function () {
            loadDataTable()
        })
    </script>
}

