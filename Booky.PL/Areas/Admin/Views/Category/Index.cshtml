@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container"> 
<div class="row pt-4 pb-3">
        <div class="col-6">
            <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col-6 text-end ">
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
</div>


@if(Model.Count()>0)
{
    <table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cat in Model.OrderBy(c=>c.DisplayOrder))
            {

                <tr>
                    <td>@cat.Name</td>
                    <td>@cat.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary  mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger  mx-2"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    <td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="bg-warning mt-3">
        <h2>No Categories</h2>
    </div>
}
</div>

