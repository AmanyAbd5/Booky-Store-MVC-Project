@model UsersViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create User</h2>
            <hr />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Fname" class="p-0">First Name</label>
            <input asp-for="Fname" class="form-control" />
            <span asp-validation-for="Fname" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Lname" class="p-0">Last Name</label>
            <input asp-for="Lname" class="form-control" />
            <span asp-validation-for="Lname" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Email" class="p-0">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Password" class="p-0">Password</label>
            <input type="Password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="row mb-3 p-1">
            <label asp-for="Roles" class="p-0"> Roles</label>
            <select asp-for="Roles" asp-items="@ViewBag.rolos">
                <option selected disabled>--Select Role--</option>
            </select>
            <span asp-validation-for="Roles" class="text-danger"></span>
        </div>



        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" asp-action="Create" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Users" asp-action="Index" class="btn btn-success border form-control"><i class="bi bi-arrow-return-left"></i>  To List</a>
            </div>
        </div>
    </div>
</form>
